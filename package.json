{
  "name": "menu-management-system",
  "version": "1.0.0",
  "description": "A hierarchical menu management system with NestJS backend and Next.js frontend",
  "private": true,
  "workspaces": [
    "nst-backend",
    "nxt-frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd nst-backend && npm run start:dev",
    "dev:frontend": "cd nxt-frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd nst-backend && npm run build",
    "build:frontend": "cd nxt-frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd nst-backend && npm run start:prod",
    "start:frontend": "cd nxt-frontend && npm run start",
    "docker:build": "docker build -t menu-management .",
    "docker:run": "docker run -p 3000:3000 menu-management",
    "docker:compose": "docker-compose up --build",
    "db:migrate": "cd nst-backend && npx prisma migrate dev",
    "db:generate": "cd nst-backend && npx prisma generate",
    "db:studio": "cd nst-backend && npx prisma studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
